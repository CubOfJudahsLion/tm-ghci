executable GHCIInterface
    import:             warnings
    main-is:            GHCIInterface.hs
    default-extensions: NumericUnderscores
    build-depends:      base >= 4.16.4.0 && < 5
                      , process >= 1.6.16.0
    hs-source-dirs:     src-ghci
    default-language:   Haskell2010
    ghc-options:        -O2 -g0


executable ColorizeHs
   import:              warnings
   main-is:             ColorizeHs.hs
   build-depends:       base >= 4.16.4.0 && < 5
                      , vector
   hs-source-dirs:      src-color
   other-modules:       Language.Haskell.Lexer.BuiltIns
   default-language:    Haskell2010
   other-extensions:    BangPatterns
   ghc-options:         -O2 -g0
               
